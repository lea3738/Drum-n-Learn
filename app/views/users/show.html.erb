      <% @likes.each do |like| %>
        <%= render "shared/music_card", drumrack: like.drumrack, display_like_button: false %>
      <% end %>
    </ul>
  <% else %>
    <h3 class="text-3xl font-bold text-white">Your likes</h3>
    <p class="text-lg">You have no drumracks liked yet.</p>
    <%= link_to "Browse drumracks", drumracks_path, class: "text-blue-500 underline" %>
  <% end %>
    </div>
</div>

</div>

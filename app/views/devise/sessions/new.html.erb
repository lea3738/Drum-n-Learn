<div class="flex items-center justify-center mt-6">
  <div class="bg-gray-200 p-8 rounded-lg shadow-lg w-3/4 max-w-md border border-black-800 ">
    <h2 class="text-2xl font-bold text-center font-kaushan text-primary">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="class="my-4 flex flex-col items-center gap-6">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="my-4 flex flex-col items-center gap-2">
        <%= f.button :submit, "Log in", class: "bg-primary  rounded-md w-1/2 p-2 hover:bg-primary/80 hover:scale-110 hover:text-lg transform transition-transform duration-200 cursor-pointer" %>
      </div>
    <% end %>
    <div class="my-4 flex flex-col items-center gap-2 hover:scale-110 hover:text-lg transform transition-transform duration-200 cursor-pointer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class="flex items-center justify-center mt-6">
  <div class="bg-greyy p-8 rounded-lg shadow-lg w-3/4 max-w-md border border-yelloww ">
    <h2 class="text-2xl font-bold text-center font-outfit text-yelloww">Edit your profile</h2>


    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="my-4 flex flex-col items-center gap-6">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    wrapper_html: {class: "w-full"},
                    input_html: { autocomplete: "email",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                },
                   label_html: {
                                  class: "text-white font-outfit"
                               }
        %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    wrapper_html: {class: "w-full"},
                    input_html: { autocomplete: "username",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                },
                    label_html: {
                                  class: "text-white font-outfit"
                                }
        %>
        <%= f.input :bio,
                    required: false,
                    autofocus: true,
                    wrapper_html: {class: "w-full"},
                    input_html: { autocomplete: "bio",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                },
                    label_html: {
                                  class: "text-white font-outfit"
                                }
        %>
        <%= f.input :soundcloud_link,
                    required: false,
                    wrapper_html: {class: "w-full"},
                    input_html: { autocomplete: "soundcloud_link",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                },
                    label_html: {
                                  class: "text-white font-outfit"
                                }
        %>
        <%= f.input :profile_picture,
          required: true,
          wrapper_html: {class: "w-full p-4 text-yelloww"},
          input_html: { autocomplete: "profile-picture",
                        class: " p-2 flex flex-col gap-2  appearance-none",
                      },
          label_html: {
                        class: "text-white font-outfit"
                      }
        %>
        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    wrapper_html: {class: "w-full text-yelloww"},
                    input_html: { autocomplete: "new-password",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none" },
                    label_html: {
                                  class: "text-white font-outfit"
                                }
        %>
        <%= f.input :password_confirmation,
                    required: false,
                    wrapper_html: {class: "w-full"},
                    input_html: { autocomplete: "new-password",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none"
                    },
                    label_html: {
                                  class: "text-white font-outfit"
                                }
        %>
        <%= f.input :current_password,
                    hint: "enter your current password to confirm your changes",
                    required: true,
                    wrapper_html: { class: "w-full text-yelloww" },
                    input_html: { autocomplete: "current-password",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none" },
                    label_html: {
                                  class: "text-white font-outfit"
                                }
        %>
      </div>

      <div class="flex flex-col items-center mb-8">
        <%= f.button :submit, "Update", class: "bg-yelloww w-1/4 font-outfit font-semibold text-center rounded-md w-1/2 p-2 hover:bg-blackk hover:text-yelloww transform border-2 border-yelloww transition-transform duration-200 cursor-pointer" %>
      </div>
    <% end %>

    <div class="flex flex-col items-center">
      <%= link_to "Back", :back, class: "bg-yelloww w-1/4 font-outfit font-semibold text-center rounded-md w-1/2 p-2 hover:bg-blackk hover:text-yelloww transform border-2 border-yelloww transition-transform duration-200 cursor-pointer" %>
    </div>
  </div>
</div>

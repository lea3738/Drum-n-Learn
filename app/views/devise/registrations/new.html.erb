<div class="flex items-center justify-center mt-6">
  <div class="bg-gray-200 p-8 rounded-lg shadow-lg w-3/4 max-w-md border border-black-800 ">
    <h2 class="text-2xl font-bold text-center font-kaushan text-primary">Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="my-4 flex flex-col items-center gap-2">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                } %>
      </div>

      <div class="my-4 flex flex-col items-center gap-2">
        <%= f.button :submit, "Sign up", class: "bg-primary  rounded-md w-1/2 p-2 hover:bg-primary/80 hover:scale-110 hover:text-lg transform transition-transform duration-200 cursor-pointer" %>
      </div>
    <% end %>
    <div class="my-4 flex flex-col items-center gap-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<%= render "shared/menubar" %>

<% notes = Array.new(16, '') %>

<div class="sequencer">
  <% notes.each_with_index do |note, i| %>
    <div class="pad <%= 'active' if i == 0 %>"><%= note %></div>
  <% end %>
</div>

<style>
  .sequencer {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-gap: 5px;
    width: 100%;
  }
  .pad {
    background: #ccc;
    font-size: 10px
    width: 50px;
    height: 50px;
    border: 1px solid #ccc;
    border-radius: 7px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2rem;
    padding: 0;
    box-sizing: border-box;
  }

  .pad.active {
    background: #600889;
    border: 1px solid #600889;
    color: #fff;
  }
</style>

<div class="bpm-controls flex items-center justify-center gap-4 w-full">
    <div class="radio-input rounded-t-md">
        <label class="label radioPS">
            <input value="value-1" name="value-radio" id="value-1" type="radio" data-action="click->sequencer#play"/>
            <span class="text">Play</span>
        </label>

        <label class="label radioPS" data-action="click->sequencer#pause">
            <input value="value-1" name="value-radio" id="value-1" type="radio" checked />
            <span class="text">Stop</span>
        </label>

        <button class="label control-button" data-action="click->sequencer#decreaseBpm">
            <span class="text text-3xl">-</span>
        </button>

        <label for="bpm" id="bpm-label" class="label min-w-[150px]">
            <span class="text" id="bpm-text" data-sequencer-target="bpmLabelCurrent"><%= @drumrack.bpm %> BPM</span>
        </label>

        <button class="label control-button" data-action="click->sequencer#increaseBpm">
            <span class="text text-2xl">+</span>
        </button>

        <%= link_to edit_drumrack_path(@drumrack), class: 'label control-button' do %>
            <span class="text">Edit</span>
        <% end %>

        <button class="label control-button" data-action="click->sequencer#resetAll">
            <span class="text">Clear</span>
        </button>

        <button class="control-button label" data-action="click->sequencer#lauchAi">
            <span class="text">Use AI</span>
        </button>

        <%= link_to root_path, class: 'label control-button' do %>
            <span class="text">Home</span>
        <% end %>
    </div>
</div>
